<%= form_for @recipe, :html => {:class => 'new_form'} do |f| %>
<!-- nice use of class in form_for!! -->

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.label :ingredients %>
  <%= f.text_area :ingredients  %>

  <%= f.label :directions %>
  <%= f.text_area :directions  %>


  <%= f.submit %>

  <% end %>
