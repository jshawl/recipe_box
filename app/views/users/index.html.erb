
<h2><%= @user.username %>'s Recipes</h2>
<!-- this feels like a "recipes" view more than a "users" view -->


<div class="container_index">
<% @recipes.each do |recipe| %>
<div class="recipe">
    <h3><%= recipe.title %></h3>
    <%= link_to image_tag( recipe.photo_url , {:alt=>"#{recipe.title}"}), recipe_path(recipe) %>
</div>
<% end %>
